<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Password_Validation</fullName>
    <active>true</active>
    <description>Validations for Password</description>
    <errorConditionFormula>NOT(REGEX( Password__c  , &quot;((?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%]).{6,20})&quot;))</errorConditionFormula>
    <errorDisplayField>Password__c</errorDisplayField>
    <errorMessage>Password should contain at least one numeric, 1 alpha numeric and 1 special characters.</errorMessage>
</ValidationRule>
